	@Test 
	public void deveConsultarRestricao1() {	
		
		when().
		get(CONSULTAR_CPF01).
		then().
		log().all().
		statusCode(200).
		and().
		body("mensagem", equalTo("O CPF 97093236014 possui retrição"));
}
